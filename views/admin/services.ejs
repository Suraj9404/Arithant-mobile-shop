<%- include('navbar') %>

<section class="services-section">
  <h2>Our <span class="highlight">Services</span></h2>

  <div class="services-container">
    <% for (let i = 0; i < services.length; i++) { %>
      <div class="service-card">
        <div class="icon-box">
          <img src="/images/<%= services[i].image %>" alt="<%= services[i].title %>">
        </div>
        <div class="text-box">
          <h3><%= services[i].title %></h3>
          <p><%= services[i].description %></p>
          <a href="/admin/update_service/<%= services[i].id %>" class="update-btn">Update</a>
        </div>
      </div>
    <% } %>
  </div>
</section>

<style>
.services-section {
  padding: 40px;
  background-color: #f1f5f9;
  text-align: center;
}

.services-section h2 {
  font-size: 32px;
  color: #1a1a1a;
}

.services-section .highlight {
  color: #007bff;
  border-bottom: 3px solid #007bff;
}

.services-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
  gap: 20px;
  margin-top: 30px;
  justify-items: center;
}

.service-card {
  display: flex;
  align-items: center;
  background-color: white;
  border: 2px solid #007bff;
  border-radius: 15px;
  padding: 20px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  max-width: 600px;
  gap: 20px;
  transition: transform 0.3s ease;
}

.service-card:hover {
  transform: translateY(-5px);
}

.icon-box {
  background-color: #007bff;
  padding: 15px;
  border-radius: 10px;
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-box img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.text-box {
  text-align: left;
  flex-grow: 1;
}

.text-box h3 {
  margin: 0 0 10px;
  font-size: 18px;
  font-weight: 600;
}

.text-box p {
  margin: 0;
  color: #555;
  font-size: 15px;
}

/* Update Button */
.update-btn {
  display: inline-block;
  margin-top: 12px;
  padding: 6px 12px;
  background-color: #007bff;
  color: white;
  border-radius: 8px;
  font-size: 14px;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.update-btn:hover {
  background-color: #0056b3;
}
</style>

<%- include('footer') %>
