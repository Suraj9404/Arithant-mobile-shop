<%- include('navbar') %>

<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold text-primary">Contact & Business Info</h3>
            <div>
                <a href="/admin/contact_info/<%= info.id %>" class="btn btn-warning me-2">✏️ Update</a>
                <button class="btn btn-primary" onclick="window.print()">🖨 Print</button>
            </div>
        </div>

        <div class="row g-4">
            <!-- Visit Shop -->
            <div class="col-md-6 col-lg-3">
                <div class="p-4 rounded text-center bg-dark text-white h-100">
                    <div class="fs-1 mb-3">📍</div>
                    <h5 class="fw-bold"></h5>
                    <p class="text-secondary"><%= info.shop_address_line1 %></p>
                    <p class="text-secondary"><%= info.shop_address_line2 %></p>
                    <p class="text-secondary"><%= info.city %>, <%= info.state %></p>
                    <p class="text-secondary"><%= info.country %> - <%= info.pincode %></p>
                </div>
            </div>

            <!-- बाकीचे Call Us, Email Us, Business Hours blocks -->
            <div class="col-md-6 col-lg-3">
                <div class="p-4 rounded text-center bg-dark text-white h-100">
                    <div class="fs-1 mb-3">📞</div>
                    <h5 class="fw-bold">Call Us</h5>
                    <p class="fw-bold"><%= info.phone_main %></p>
                    <p class="text-secondary">Main Number</p>
                    <p class="fw-bold text-warning">⚡ Emergency: <%= info.phone_emergency %></p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="p-4 rounded text-center bg-dark text-white h-100">
                    <div class="fs-1 mb-3">✉️</div>
                    <h5 class="fw-bold">Email Us</h5>
                    <p class="fw-bold"><%= info.email_general %></p>
                    <p class="text-secondary">General Inquiries</p>
                    <p class="fw-bold"><%= info.email_support %></p>
                    <p class="text-secondary">Technical Support</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="p-4 rounded text-center bg-dark text-white h-100">
                    <div class="fs-1 mb-3">⏰</div>
                    <h5 class="fw-bold">Business Hours</h5>
                    <p><strong>Mon - Sat:</strong> <%= info.hours_weekdays %></p>
                    <p><strong>Sunday:</strong> <%= info.hours_sunday %></p>
                    <% if (info.open_holidays) { %>
                        <p class="text-warning">❗ Open on public holidays</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('footer') %>
