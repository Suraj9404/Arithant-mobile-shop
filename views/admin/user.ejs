<%- include('navbar') %>

<main class="flex-1 p-6">
    <div id="users" class="section">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h1 class="fw-bold text-dark">User Management</h1>
          <button class="btn btn-gradient-warning animate-pulse-hover" onclick="showNotification('New user invited!')">
            <i class="fas fa-user-plus me-1"></i>Invite User
          </button>
        </div>
        
        <div class="card table-custom">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>User</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Last Login</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                          JD
                        </div>
                        <span class="fw-medium">John Doe</span>
                      </div>
                    </td>
                    <td>john@example.com</td>
                    <td><span class="badge bg-primary">Admin</span></td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td class="text-muted">2 hours ago</td>
                    <td>
                      <button class="btn btn-sm btn-outline-primary me-1">Edit</button>
                      <button class="btn btn-sm btn-outline-danger">Suspend</button>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                          JS
                        </div>
                        <span class="fw-medium">Jane Smith</span>
                      </div>
                    </td>
                    <td>jane@example.com</td>
                    <td><span class="badge bg-secondary">User</span></td>
                    <td><span class="badge bg-success">Active</span></td>
                    <td class="text-muted">1 day ago</td>
                    <td>
                      <button class="btn btn-sm btn-outline-primary me-1">Edit</button>
                      <button class="btn btn-sm btn-outline-danger">Suspend</button>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
</main>

<%- include('footer') %>
