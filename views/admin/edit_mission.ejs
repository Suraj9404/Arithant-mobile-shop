<div class="container mt-4">
    <div class="card p-4">
        <h2>Edit Mission</h2>
        <form action="/admin/update_mission" method="POST">
            <div class="form-group">
                <textarea name="content" class="form-control" rows="5"><%= mission.content %></textarea>
