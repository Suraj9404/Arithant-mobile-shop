<%-include('navbar')%>

<body>

    <section id="about-hero" class="pt-5 bg-dark text-white px-4 py-5  ">
        <div class="container text-center">
            <h2 class="display-4 fw-bold text-white mb-4">About Us</h2>
            <p class="lead text-secondary mx-auto max-w-2xl">Your trusted partner in mobile technology since 2016. We bring innovation to your fingertips with premium devices and expert service.</p>
        </div>
    </section>

    <section id="our-story" class="py-5 bg-light">
        <div class="container px-4">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold mb-4">Our <span class="text-primary">Journey</span></h2>
                <div class="section-divider"></div>
            </div>

            <div class="row g-5 align-items-center">
                <div class="col-lg-6">
                    <div class="rounded-3 p-4 border border-1 border-light custom-card-bg h-100 card-hover">
                        <h3 class="h3 fw-bold mb-4 text-white">Our Story</h3>

                        <% for (var i = 0; i < info.length; i++) { %>
                            <p class="text-secondary"><%-info[i].content%></p>
                        <% } %>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="rounded-3 p-4 custom-card-bg h-100 stats-card">
                        <div class="d-flex justify-content-center mb-4">
                            <div class="bg-light border border-1 border-light rounded-circle p-4 icon-circle">
                                <i class="fas fa-store text-primary display-6"></i>
                            </div>
                        </div>
                        <h4 class="h4 fw-bold text-center mb-4 text-white">8+ Years of Excellence</h4>
                        <div class="row g-3 text-center">
                            <div class="col-6">
                                <div class="bg-light p-3 rounded-3 h-100 card-hover">
                                    <div class="fs-3 fw-bold text-primary">10,000+</div>
                                    <div class="text-secondary mt-2">Happy Customers</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="bg-light p-3 rounded-3 h-100 card-hover">
                                    <div class="fs-3 fw-bold text-primary">50,000+</div>
                                    <div class="text-secondary mt-2">Devices Repaired</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="bg-light p-3 rounded-3 h-100 card-hover">
                                    <div class="fs-3 fw-bold text-primary">100+</div>
                                    <div class="text-secondary mt-2">Phone Models</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="bg-light p-3 rounded-3 h-100 card-hover">
                                    <div class="fs-3 fw-bold text-primary">24/7</div>
                                    <div class="text-secondary mt-2">Support</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5 bg-light">
        <div class="container px-4">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="custom-card-bg rounded-3 p-4 h-100 card-hover">
                        <div class="d-flex justify-content-center mb-4">
                            <div class="bg-primary rounded-circle custom-icon-circle text-white">
                                <i class="fas fa-bullseye fs-4"></i>
                            </div>
                        </div>
                        <h3 class="h4 fw-bold text-center mb-3 text-white">Our Mission</h3>
                       <p class="text-secondary text-center lh-lg">
                        <%= mission[0].content %>
                        </p>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="custom-card-bg rounded-3 p-4 h-100 card-hover">
                        <div class="d-flex justify-content-center mb-4">
                            <div class="bg-primary rounded-circle custom-icon-circle text-white">
                                <i class="fas fa-eye fs-4"></i>
                            </div>
                        </div>
                        <h3 class="h4 fw-bold text-center mb-3 text-white">Our Vision</h3>
                       <p class="text-secondary text-center lh-lg">
                         <%= vision[0].content %>
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5 bg-light">
    <div class="container px-4">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-4">Our <span class="text-primary">Expert Team</span></h2>
            <p class="lead text-secondary mx-auto max-w-2xl">Meet the dedicated professionals who make Arihant Mobile the best in the business</p>
            <div class="section-divider mt-4"></div>
        </div>
        <div class="row g-4">

            <% for (var i = 0; i < team.length; i++) { %>
                <div class="col-md-4">
                    <div class="custom-card-bg rounded-3 p-4 text-center h-100 card-hover">
                        <div class="position-relative mb-4">
                           <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center">
                            <img src="/images/<%= team[i].image %>" 
                                alt="<%= team[i].name %>" 
                                style="width:120px; height:120px; object-fit:cover; border-radius:50%;">
                        </div>

                            <% if (team[i].linkedin_link) { %>
                            <div class="position-absolute bottom-0 end-0 team-social-badge bg-primary rounded-circle p-2 text-white me-4">
                                <a href="<%= team[i].linkedin_link %>" target="_blank" class="text-white">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                            </div>
                            <% } %>
                        </div>
                        <h4 class="h5 fw-semibold mb-2 text-white"><%= team[i].name %></h4>
                        <p class="text-primary fw-semibold mb-3"><%= team[i].position %></p>
                        <p class="text-secondary small"><%= team[i].description %></p>
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <% if (team[i].twitter_link) { %><a href="<%= team[i].twitter_link %>" class="social-icon text-secondary"><i class="fab fa-twitter"></i></a><% } %>
                            <% if (team[i].instagram_link) { %><a href="<%= team[i].instagram_link %>" class="social-icon text-secondary"><i class="fab fa-instagram"></i></a><% } %>
                            <% if (team[i].facebook_link) { %><a href="<%= team[i].facebook_link %>" class="social-icon text-secondary"><i class="fab fa-facebook-f"></i></a><% } %>
                        </div>
                    </div>
                </div>
            <% } %>

        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container px-4">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-4">
                Why Choose <span class="text-primary">Arihant Mobile</span>?
            </h2>
            <p class="lead text-secondary mx-auto max-w-2xl">
                Discover what makes us the preferred choice for mobile solutions
            </p>
            <div class="section-divider mt-4"></div>
        </div>

        <div class="row g-4">
            <% for (var i = 0; i < why_choose.length; i++) { %>
                <div class="col-md-6 col-lg-3">
                    <div class="custom-card-bg p-4 rounded-3 text-center h-100 card-hover">
                        <div class="bg-light rounded-circle why-choose-icon-circle mx-auto mb-4 d-flex align-items-center justify-content-center">
                            <% if (i === 0) { %>
                                <i class="fas fa-tools text-primary fs-4"></i>
                            <% } else if (i === 1) { %>
                                <i class="fas fa-check-circle text-primary fs-4"></i>
                            <% } else if (i === 2) { %>
                                <i class="fas fa-shield-alt text-primary fs-4"></i>
                            <% } else if (i === 3) { %>
                                <i class="fas fa-bolt text-primary fs-4"></i>
                            <% } %>
                        </div>
                        <h4 class="h5 fw-semibold mb-3 text-white">
                            <%= why_choose[i].title %>
                        </h4>
                        <p class="text-secondary">
                            <%= why_choose[i].description %>
                        </p>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>




   <section class="py-5 bg-light">
    <div class="container px-4">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-4">Our <span class="text-primary">Journey</span></h2>
            <p class="lead text-secondary mx-auto max-w-2xl">From humble beginnings to industry leaders</p>
            <div class="section-divider mt-4"></div>
        </div>
        <div class="max-w-4xl mx-auto">
            <div class="timeline-container">

                <% for (var i = 0; i < our_journey.length; i++) { %>
                    <div class="timeline-item position-relative ps-5 pb-4">
                        <div class="timeline-icon position-absolute start-0 top-0 bg-primary rounded-circle text-white d-flex align-items-center justify-content-center">
                            <% if (i === 0) { %>
                                <i class="fas fa-rocket small"></i>
                            <% } else if (i === 1) { %>
                                <i class="fas fa-expand small"></i>
                            <% } else if (i === 2) { %>
                                <i class="fas fa-award small"></i>
                            <% } else if (i === 3) { %>
                                <i class="fas fa-globe small"></i>
                            <% } else { %>
                                <i class="fas fa-star small"></i> <!-- extra items साठी default icon -->
                            <% } %>
                        </div>
                        <div class="custom-card-bg rounded-3 p-4 card-hover">
                            <h4 class="h5 fw-bold mb-2 text-white"><%= our_journey[i].year_title %></h4>
                            <p class="text-secondary"><%= our_journey[i].description %></p>
                        </div>
                    </div>
                <% } %>

            </div>
        </div>
    </div>
</section>
    

 <section class="py-5 bg-light">
    <div class="container px-4">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-4">Customer <span class="text-primary">Testimonials</span></h2>
            <p class="lead text-secondary mx-auto max-w-2xl">
                Hear what our satisfied customers have to say about us
            </p>
            <div class="section-divider mt-4"></div>
        </div>

        <div class="row g-4">
            <% for (var i = 0; i < reviews.length && i < 3; i++) { 
                var r = reviews[i]; %>
                <div class="col-md-4">
                    <div class="custom-card-bg rounded-3 p-4 h-100 card-hover">
                        <div class="text-primary fs-4 mb-3">
                            <% for (var s = 0; s < r.rating; s++) { %>
                                <i class="fas fa-star"></i>
                            <% } %>
                            <% for (var s = r.rating; s < 5; s++) { %>
                                <i class="far fa-star"></i>
                            <% } %>
                        </div>
                        <p class="text-secondary mb-3 fst-italic">
                            "<%= r.review %>"
                        </p>
                        <div class="d-flex align-items-center">
                            <div class="w-10 h-10 rounded-circle bg-primary d-flex align-items-center justify-content-center me-3 text-white customer-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                            <div>
                                <div class="fw-semibold text-white"><%= r.name %></div>
                                <div class="text-secondary small"><%= r.role || 'Customer' %></div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>



    <section class="py-5 bg-primary">
        <div class="container px-4 text-center">
            <h3 class="display-5 fw-bold mb-4 text-white">Ready to Experience <span class="text-secondary">Our Service</span>?</h3>
            <p class="lead text-white mb-4 mx-auto max-w-2xl">Visit us today for all your mobile needs - repairs, upgrades, accessories, and expert advice</p>
            <div class="d-flex flex-wrap justify-content-center gap-3">
                <a href="/contact" class="btn btn-secondary px-4 py-2 fw-semibold custom-cta-button">
                    <i class="fas fa-map-marker-alt me-2"></i>Visit Our Shop
                </a>
                <a href="/product" class="btn btn-outline-light px-4 py-2 fw-semibold custom-cta-button-alt">
                    <i class="fas fa-shopping-cart me-2"></i>View Products
                </a>
            </div>
        </div>
    </section>

  
