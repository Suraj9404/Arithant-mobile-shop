    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            if (menu) { 
                menu.classList.toggle('d-none'); 
            }
        }

        
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.1
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-fade-in'); 
                    }
                });
            }, observerOptions);

            
            document.querySelectorAll('section').forEach(section => {
                observer.observe(section);
            });
        });

        
        const currentPage = window.location.pathname.split("/").pop();

        
        document.querySelectorAll(".nav-link").forEach(link => {
            if (link.getAttribute("href") === currentPage) {
                link.classList.add("active"); 
                link.setAttribute("aria-current", "page");
            }
        });


        document.querySelectorAll("#navbarNav a").forEach(link => { 
            if (link.getAttribute("href").includes(currentPage)) { 
                link.classList.add("active-mobile-link"); 
            }
        });

        
        const images = [
            "https://i.pinimg.com/736x/d5/1b/0d/d51b0d8826063f245dc38e9ff6c5c263.jpg",
            "https://i.pinimg.com/originals/ae/c6/8d/aec68d4fcff71b5cf982eef2ee5bb2ae.jpg",
            "https://i.pinimg.com/originals/84/b6/1e/84b61e1e3d9e307ebf89f4b2ce7763c2.jpg",
            "https://i.pinimg.com/736x/f0/d0/8d/f0d08d9645f79070f997de9f738e03db.jpg"
        ];

        let current = 0;
        const sliderImage = document.getElementById("sliderImage");

        function showSlide(index) {
            if (!sliderImage) return; 

            if (index < 0) index = images.length - 1;
            if (index >= images.length) index = 0;
            current = index;
            sliderImage.src = images[current];
        }

        function nextSlide() {
            showSlide(current + 1);
        }

        function prevSlide() {
            showSlide(current - 1);
        }

        
        if (sliderImage) {
            setInterval(() => nextSlide(), 5000);
        }

        document.addEventListener('DOMContentLoaded', function() {
            
            showCategory('all');

            
            document.querySelector('.category-btn.btn-orange').classList.add('active');
        });

        function showCategory(category) {
            const allCategories = document.querySelectorAll('.product-category');
            allCategories.forEach(cat => {
                cat.classList.remove('active');
            });

            const categoryButtons = document.querySelectorAll('.category-btn');
            categoryButtons.forEach(btn => {
                btn.classList.remove('active', 'btn-orange');
                btn.classList.add('btn-outline');
            });

            if (category === 'all') {
                allCategories.forEach(cat => {
                    cat.classList.add('active');
                });
                document.querySelector('.category-btn[onclick="showCategory(\'all\')"]').classList.remove('btn-outline');
                document.querySelector('.category-btn[onclick="showCategory(\'all\')"]').classList.add('active', 'btn-orange');
            } else {
                document.getElementById(category).classList.add('active');
                document.querySelector(`.category-btn[onclick="showCategory('${category}')"]`).classList.remove('btn-outline');
                document.querySelector(`.category-btn[onclick="showCategory('${category}')"]`).classList.add('active', 'btn-orange');
            }
        }

        function inquireProduct(productName) {
            alert(`You've expressed interest in: ${productName}. Please visit our store or contact us for more details!`);
            
        }

        
        function handleContactForm(event) {
            event.preventDefault(); 
            alert('Message sent! We will get back to you soon.');
            
        }

    const navbarLoginBtn = document.getElementById('navbarLoginBtn'); 
    const loginPopup = document.getElementById('loginPopup');
    const closeBtn = document.getElementById('closeLogin');
    const loginForm = document.getElementById('loginForm');
    const signInForm = document.getElementById('signInForm');
    const switchToSignInLink = document.getElementById('switchToSignIn');
    const switchToLoginLink = document.getElementById('switchToLogin');
    function showPopup(formToShow) {
        loginForm.classList.add('hidden');
        signInForm.classList.add('hidden');
        formToShow.classList.remove('hidden');
        loginPopup.style.display = 'flex'; 
        document.body.style.overflow = 'hidden'; 
    }
    function hidePopup() {
        loginPopup.style.display = 'none';
        document.body.style.overflow = 'auto'; 
    }
    navbarLoginBtn.addEventListener('click', (e) => {
        e.preventDefault(); 
        showPopup(loginForm); 
    });
    closeBtn.addEventListener('click', () => {
        hidePopup();
    });
    switchToSignInLink.addEventListener('click', (e) => {
        e.preventDefault();
        showPopup(signInForm); 
    });
    switchToLoginLink.addEventListener('click', (e) => {
        e.preventDefault();
        showPopup(loginForm); 
    });
    window.addEventListener('click', function(event) {
        if (event.target === loginPopup) {
            hidePopup();
        }
    });

